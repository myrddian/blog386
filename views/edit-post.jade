extends layout

block content
    include navbar
    div(class="container-fluid")
        div(class="row col-md-6 col-md-offset-3")
            h1 #{post_state} Post
            form(role="form", id='#{nonce}', method='post')
                div(class="form-group")
                    label(for="exampleInputEmail1") Post Title
                    input(class="form-control", type='text', name='edit_post_title' , value='#{post_title}')
                div( class="form-group"  )
                    label Body
                    textarea(type='text', name='edit_post_content', class="form-control" , rows='10'). #{post_content}
                div( class="form-group"  )
                    button(class='btn btn-primary col-md-4', name='save_post', type='submit') Ok
                    a(class='btn btn-primary col-md-4 col-md-offset-4', name='cancel_post', onclick='window.history.back()') Cancel


