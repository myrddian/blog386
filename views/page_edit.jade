extends layout
block content
    include navbar
    div(class="container-fluid")
        div(class="jumbotron")
            h3 Edit Page
        div(class="row col-md-6 col-md-offset-3")
            form(role="form", id='#{nonce}', method='post')
                div(class="form-group")
                    label(for="exampleInputEmail1") Page Title
                    input(class="form-control", type='text', name='edit_page_title' , value='#{page_title}')
                div( class="form-group"  )
                    label Content
                    textarea(type='text', name='edit_page_content', class="form-control" , rows='10'). #{page_content}
                div( class="form-group"  )
                    button(class='btn btn-primary col-md-4', name='save_post', type='submit') Ok
                    a(class='btn btn-primary col-md-4 col-md-offset-4', name='cancel_page', onclick='window.history.back()') Cancel