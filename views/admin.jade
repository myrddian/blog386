extends layout
block content
    include navbar
    div(class="container-fluid")
        div(class="row col-md-6 col-md-offset-3")
            div(class="jumbotron")
                h2 Administration
            div(class="form-group")
                form(role="form", id='#{nonce}', method='post')
                    div(class="form-group")
                        h3 Blog Name
                        input(class="form-control", type='text', name='edit_blog_name' , value='#{blog_name}')
                    div(class="form-group")
                        h3 Blog Count
                        input(class="form-control", type='text', name='edit_blog_count' , value='#{blog_count}')
                    div(class="form-group")
                        h3 Theme
                            select(name="theme_select", class="btn dropdown-toggle")
                                if theme == 'Twitter'
                                    option(value="386") 386
                                    option(value="Geocities") Geocities
                                    option(selected="selected", value="Twitter") Twitter
                                else if theme == '386'
                                    option(selected="selected", value="386") 386
                                    option(value="Geocities") Geocities
                                    option(value="Twitter") Twitter
                                else
                                    option(value="386") 386
                                    option(value="Geocities", selected="selected") Geocities
                                    option(value="Twitter") Twitter
                    div(class="form-group")
                        h3 Blog Welcome Text
                        input(class="form-control", type='text', name='edit_blog_welcome' , value='#{blog_welcome}')

                    div(class="form-group")
                        button(class='btn btn-primary col-md-4', name='save_config', type='submit') Update
                        a(class='btn btn-primary col-md-4 col-md-offset-4', name='cancel_config', onclick='window.history.back()') Cancel
